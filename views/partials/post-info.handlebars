<article class="card mb-3">
  <div class="card-header">
    <div class="row">
      <div class="col-12 col-md-7">
        <h2 class="card-title"><a href="/post/{{id}}">{{title}}</a></h2>
      </div>
    </div>
  </div>
  <div class="card-body pt-0">
      <p class="text-end text-muted post-byline">
        Posted by {{user.username}} on {{format_date created_at}}
      </p>
    <p class="card-text">{{body}}</p>
    <p><a href="post/{{id}}">{{comment_count}} {{format_plural 'comment' comment_count}}</a></p>
  </div>
</article>